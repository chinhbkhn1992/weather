<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="inputDone"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp"
        tools:context=".ui.shop.phone.input.InputPhoneNumberFragment">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Xác minh số điện thoại"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_exit" />

        <TextView
            android:id="@+id/tv_phone_number_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Mã xác thực đã được gửi đến số điện thoại \n (+84)123456789"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number" />

        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cursorWidth="3dp"
            app:cursorColor="@color/text_color_gray"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            android:textColor="@color/text_color_black"
            app:lineColor="@android:color/black"
            app:itemHeight="48dp"
            app:itemRadius="10dp"
            app:itemSpacing="2dp"
            android:hint="------"
            android:textColorHint="@color/text_color_gray"
            app:itemWidth="48dp"
            app:layout_constraintTop_toBottomOf="@id/tv_phone_number_des"
            app:lineWidth="1dp"
            app:viewType="rectangle">

        </com.chaos.view.PinView>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_send_verify"
            android:enabled="@{inputDone}"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>